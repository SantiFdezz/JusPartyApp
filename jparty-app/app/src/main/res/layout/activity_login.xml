<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:contentDescription="@string/app_name"
        android:layout_height="110dp"
        android:src="@drawable/logojparty_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/separator"/>
    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintBottom_toTopOf="@+id/white_screen"/>
    <View
        android:id="@+id/white_screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintWidth_percent="1"
        android:background="@drawable/top_rounded_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_form"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/white_screen"
        app:layout_constraintBottom_toBottomOf="@+id/white_screen"
        app:layout_constraintStart_toStartOf="@+id/white_screen"
        app:layout_constraintEnd_toEndOf="@+id/white_screen"
        android:padding="10dp">
        <TextView
            android:id="@+id/access_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/access"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/rounded_border"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/access_text">
                <TextView
                    android:id="@+id/emaillabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@id/userinput"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/userinput"/>
                <EditText
                    android:id="@+id/userinput"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:hint="@string/emailhint"
                    app:layout_constraintWidth_percent="0.69"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/emaillabel"/>

                <TextView
                    android:id="@+id/passwordlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/passwordhint"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/userinput"
                    app:layout_constraintStart_toStartOf="@id/passwordinput"
                    app:layout_constraintBottom_toTopOf="@id/passwordinput"
                    />

                <EditText
                    android:id="@+id/passwordinput"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:hint="@string/passwordhint"
                    android:textSize="15sp"
                    app:layout_constraintWidth_percent="0.69"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/passwordlabel"
                    android:inputType="textPassword"/>
                <TextView
                    android:id="@+id/register_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/underlined_text"
                    android:textColor="#1783DA"
                    android:layout_marginTop="10dp"
                    android:inputType="textMultiLine"                    app:layout_constraintTop_toBottomOf="@id/passwordinput"
                    app:layout_constraintStart_toStartOf="@+id/passwordinput"
                    app:layout_constraintEnd_toEndOf="@+id/passwordinput"
                    app:layout_constraintBottom_toTopOf="@id/circle_button"
                    />
                <ImageButton
                    android:id="@+id/circle_button"
                    android:layout_marginTop="7dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent="0.15"
                    app:layout_constraintHeight_percent="0.18"
                    android:background="@drawable/circle_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/register_text"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/enter_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/enter_icon"
                    app:layout_constraintEnd_toEndOf="@id/circle_button"
                    app:layout_constraintStart_toStartOf="@id/circle_button"
                    app:layout_constraintTop_toTopOf="@id/circle_button"
                    app:layout_constraintBottom_toBottomOf= "@id/circle_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/loadingScreen"
            android:visibility="invisible"
            android:progressTint="@color/purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>