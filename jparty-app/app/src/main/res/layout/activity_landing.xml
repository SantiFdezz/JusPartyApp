<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple">
    <ImageView
        android:id="@+id/circle_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/logojparty_black"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="@+id/circle_logo"
        app:layout_constraintStart_toStartOf="@+id/circle_logo"
        app:layout_constraintTop_toTopOf="@+id/circle_logo"
        app:layout_constraintBottom_toBottomOf="@+id/circle_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/justparty"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/circle_logo"
        app:layout_constraintStart_toStartOf="@+id/circle_logo"
        app:layout_constraintTop_toTopOf="@+id/logo"
        app:layout_constraintBottom_toBottomOf="@+id/circle_logo"/>

    <ImageButton
        android:id="@+id/circle_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/circle_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_logo" />
    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow"
        app:layout_constraintEnd_toEndOf="@+id/circle_button"
        app:layout_constraintStart_toStartOf="@+id/circle_button"
        app:layout_constraintTop_toTopOf="@+id/circle_button"
        app:layout_constraintBottom_toBottomOf= "@+id/circle_button" />

</androidx.constraintlayout.widget.ConstraintLayout>