<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_marginTop="50dp"
        android:id="@+id/assistance_event_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple" />
        <View
            android:id="@+id/info_box"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/custom_shape_info"
            app:layout_constraintBottom_toTopOf="@+id/ticket_style"/>
        <View
            android:id="@+id/ticket_style"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/custom_shape"
            app:layout_constraintTop_toBottomOf="@+id/info_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/sk_box"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/custom_shape_sk"
            app:layout_constraintTop_toBottomOf="ticket_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageButton
            android:id="@+id/unassist_button"
            android:layout_width="25dp"
            android:contentDescription="Button to unassist"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_button"
            app:layout_constraintStart_toStartOf="@+id/info_box"
            app:layout_constraintTop_toTopOf="@+id/info_box"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="13dp"
            android:id="@+id/unassist_icon"
            android:contentDescription="Icon to unassist"
            android:src="@drawable/close_icon"
            app:layout_constraintStart_toStartOf="@+id/unassist_button"
            app:layout_constraintTop_toTopOf="@+id/unassist_button"
            app:layout_constraintBottom_toBottomOf="@+id/unassist_button"
            app:layout_constraintEnd_toEndOf="@+id/unassist_button"/>
        <ImageButton
            android:id="@+id/info_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="Information Button"
            android:background="@drawable/circle_button"
            app:layout_constraintEnd_toEndOf="@+id/info_box"
            app:layout_constraintTop_toTopOf="@+id/info_box"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/info_icon"
            android:src="@drawable/info_icon"
            android:contentDescription="Information Icon"
            app:layout_constraintStart_toStartOf="@+id/info_button"
            app:layout_constraintTop_toTopOf="@+id/info_button"
            app:layout_constraintBottom_toBottomOf="@+id/info_button"
            app:layout_constraintEnd_toEndOf="@+id/info_button"/>
        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Button to like"
            android:background="@drawable/circle_button"
            app:layout_constraintEnd_toStartOf="@+id/info_button"
            app:layout_constraintTop_toTopOf="@+id/info_box"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/like_icon"
            android:contentDescription="Icon to like"
            android:src="@drawable/like_unselected"
            app:layout_constraintStart_toStartOf="@+id/like_button"
            app:layout_constraintTop_toTopOf="@+id/like_button"
            app:layout_constraintBottom_toBottomOf="@+id/like_button"
            app:layout_constraintEnd_toEndOf="@+id/like_button"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Sala Pelícano"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/unassist_button"
            app:layout_constraintStart_toStartOf="@+id/info_box"
            app:layout_constraintEnd_toEndOf="@+id/info_box"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/basic_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="El ticket desaparecerá  automaticamente a las 12 horas de la decha de inicio de el evento"
            android:textSize="11sp"
            android:textColor="#C1B1EC"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/info_box"
            app:layout_constraintEnd_toEndOf="@+id/info_box"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:id="@+id/assistants_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asistentes"
            android:textSize="13sp"
            android:textColor="#C1B1EC"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/basic_information"
            app:layout_constraintStart_toStartOf="@+id/basic_information"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/assistants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="230"
            android:textSize="13sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/assistants_textview"
            app:layout_constraintStart_toStartOf="@+id/assistants_textview"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/location_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textSize="13sp"
            android:textColor="#C1B1EC"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/basic_information"
            app:layout_constraintStart_toEndOf="@+id/assistants"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Av do ferrocarril"
            android:textSize="13sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/location_textview"
            app:layout_constraintStart_toStartOf="@+id/location_textview"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="13sp"
            android:textColor="#C1B1EC"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/assistants"
            app:layout_constraintStart_toStartOf="@+id/basic_information"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29/04/2024"
            android:textSize="13sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/date_textview"
            app:layout_constraintStart_toStartOf="@+id/date_textview"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="13sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/date"
            app:layout_constraintStart_toStartOf="@+id/date"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="13sp"
            android:textColor="#C1B1EC"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/location"
            app:layout_constraintStart_toStartOf="@+id/location"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gratis"
            android:textSize="13sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/price_textview"
            app:layout_constraintStart_toStartOf="@+id/price_textview"
            android:layout_marginTop="8dp"
            />
        <LinearLayout
            android:id="@+id/sk_box_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/ticket_style"
            android:gravity="center">
            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"

                android:background="@drawable/circle_button"
                >
                <ImageButton
                    android:id="@+id/link_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/link_icon"
                    android:contentDescription="Link Icon"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secret Key: "
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/sk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PATATA"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_marginTop="10dp"
            android:src="@drawable/logojparty_small_white"
            app:layout_constraintTop_toBottomOf="@+id/sk_box_info"
            app:layout_constraintStart_toStartOf="@+id/sk_box"
            app:layout_constraintEnd_toEndOf="@+id/sk_box"
            android:contentDescription="JustParty Logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/2"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/purple"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/assistance_event_layout"
        app:layout_constraintEnd_toEndOf="@+id/assistance_event_layout"
        app:layout_constraintTop_toBottomOf="@+id/assistance_event_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
